collection {
   page {
      name: "main";
      version: 1;
      title: "DOSBox Preferences";
      widget: "elm/vertical_frame";

      items {
         item { name: "dosbox/tod/cdrom"; type: TEXT;
            editable: 1;
            label: "Path to Warcraft II Tides Of Darkness CD-ROM Folder";
            text {
               placeholder: "/path/to/warcraft2/cdrom";
            }
         }

         item { name: "dosbox/tod/disk"; type: TEXT;
            editable: 1;
            label: "Path to Warcraft II Tides Of Darkness Installation Folder";
            text {
               placeholder: "/path/to/warcraft2/folder";
            }
         }

         item { name: "dosbox/tod/path"; type: TEXT;
            editable: 1;
            label: "Path to Warcraft II Tides Of Darkness Binary Within its Installation Folder (mounted as C:\\)";
            text {
               placeholder: "path\\to\\warcraft2\\binary (from C:\\)";
            }
         }

         item { name: "dosbox/bdp/cdrom"; type: TEXT;
            editable: 1;
            label: "Path to Warcraft II Beyond The Dark Portal CD-ROM Folder";
            text {
               placeholder: "/path/to/warcraft2/cdrom";
            }
         }

         item { name: "dosbox/bdp/disk"; type: TEXT;
            editable: 1;
            label: "Path to Warcraft II Beyond The Dark Portal Installation Folder";
            text {
               placeholder: "/path/to/warcraft2/folder";
            }
         }

         item { name: "dosbox/bdp/path"; type: TEXT;
            editable: 1;
            label: "Path to Warcraft II Beyond The Dark Portal Binary Within its Installation Folder (mounted as C:\\)";
            text {
               placeholder: "path\\to\\warcraft2\\binary (from C:\\)";
            }
         }

         item { name: "dosbox/cmd"; type: TEXT;
            editable: 1;
            label: "Extra command";
         }

         item { name: "dosbox/bin"; type: TEXT;
            editable: 1;
            label: "DOSBox binary";
            text {
               placeholder: "/usr/bin/dosbox";
            }
         }
      }
   }
}

