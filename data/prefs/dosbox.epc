collection {
   page {
      name: "main";
      version: 1;
      title: "DOSBox Preferences";
      widget: "elm/vertical_frame";

      items {
         item { name: "dosbox/cdrom"; type: TEXT;
            editable: 1;
            label: "Path to Warcraft II CD-ROM Folder";
            text {
               placeholder: "/path/to/warcraft2/cdrom";
            }
         }

         item { name: "dosbox/disk"; type: TEXT;
            editable: 1;
            label: "Path to Warcraft II Installation Folder";
            text {
               placeholder: "/path/to/warcraft2/folder";
            }
         }

         item { name: "dosbox/path"; type: TEXT;
            editable: 1;
            label: "Path to Warcraft II Binary Within its Installation Folder (mounted as C:\\)";
            text {
               placeholder: "C:\\path\\to\\warcraft2\\binary";
            }
         }

         item { name: "dosbox/bin"; type: TEXT;
            editable: 1;
            label: "DOSBox binary";
            text {
               placeholder: "/usr/bin/dosbox";
            }
         }
      }
   }
}

